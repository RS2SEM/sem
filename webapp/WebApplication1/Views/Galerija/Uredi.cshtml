@model ClassLibrary1.Models.Slika




<div> Uredi obavijest</div>
<form id="slikaFormm" asp-controller="Galerija" asp-action="SpasiUredi" method="post">
    @Html.HiddenFor(model => model.SlikaID);
    @Html.AntiForgeryToken()
    <div class="editor-label">
        <div class="col-md-12 form-group">
            @Html.LabelFor(model => model.lokacijaSlike, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.lokacijaSlike, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="editor-label">
        <div class="col-md-12 form-group">
            @Html.LabelFor(model => model.datumPostavljanja, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.datumPostavljanja, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    

    <div class="row">
        <div class="col-md-12 form-group">
            <input type="submit" class="btn btn-primary btn-lg btn-block" value="Spasi" data-save="modal">
        </div>
    </div>

</form>
