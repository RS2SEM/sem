@{
}

@model ClassLibrary1.ViewModels.UserPregled

<table class="table">
    <thead>
        <tr>
            <th>user ID</th>
            <th>ime</th>
            <th>prezime</th>
            <th>telefon</th>
            <th>adresa</th>
            <th>uloga ID</th>
            <th>nalog ID</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var row in Model.Listt)
        {
            <tr>
                <td>@row.UserID</td>
                <td>@row.ime</td>
                <td>@row.prezime</td>
                <td>@row.brojTelefona</td>
                <td>@row.adresaStanovanja</td>
                <td>@row.UlogaID</td>
                <td>@row.NalogID</td>
                
            </tr>
        }
    </tbody>
</table>