@using ClassLibrary1.ViewModels;
@using ClassLibrary1.Models;

@model WebApplication1.Models.DodajJelovnik
@using WebApplication1.Helper
@{
    User aktivan = Autenfikacija.GetLogiraniKorisnik(Context); }

<div> Dodaj Jelovnik</div>

<form id="jelovnikForm" asp-controller="Jelovnik" asp-action="Spasi" method="post">

    <div class="row">
        <div class="col-md-12 form-group">
            <label asp-for="Naziv">Naziv jela</label>
            <input type="text" class="form-control" asp-for="Naziv">
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 form-group">
            <label asp-for="Opis">Opis jela</label>
            <input type="text" class="form-control" asp-for="Opis">
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 form-group">
            <label asp-for="Cijena">Cijena </label>
            <input type="number" class="form-control" asp-for="Cijena">
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 form-group">
            <label asp-for="TipProizvodaId">Tip proizvoda(dorucak-1,rucak-2,vecera-3)</label>
            <input type="number" class="form-control" asp-for="TipProizvodaId">
        </div>
    </div>


    <div class="row">
        <div class="col-md-12 form-group">
            <input type="submit" class="btn btn-primary btn-lg btn-block" value="Spasi" data-save="modal">
        </div>
    </div>

</form>